<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    </header>
    <% if(orders.length <= 0) { %>
    <h1>No Orders!</h1>
    <% } else { %>
    <ul>
        <% orders.forEach(order => { %>
        <li>
            <h1>Order No. <%= order._id %></h1>
            <h2>Total: <%= order.price %></h2>
            <ul>
                <% order.items.forEach(product => { %>
                <li><%= product.title %> (<%= product.quantity %>)</li>
                <% }) %>
            </ul>
        </li>
        <% }) %>
    </ul>
    <% } %>
</body>

</html>