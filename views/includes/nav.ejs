<header class="main-header">
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item"><a href="/" class="<%= path === 'index' ? 'active' : '' %>">Shop</a></li>
            <li class="main-header__item"><a href="/products" class="<%= path === 'products' ? 'active' : '' %>">Products</a></li>
            <% if(loggedStatus) { %>
            <li class="main-header__item"><a href="/cart" class="<%= path === 'cart' ? 'active' : '' %>">Cart</a></li>
            <li class="main-header__item"><a href="/orders" class="<%= path === 'orders' ? 'active' : '' %>">Orders</a></li>
            <li class="main-header__item"><a href="/admin/add-product" class="<%= path === 'add-product' ? 'active' : '' %>">Add Product</a></li>
            <li class="main-header__item"><a href="/admin/products" class="<%= path === 'admin-products' ? 'active' : '' %>">Admin Product</a></li>
            <% } %>
        </ul>
        <ul class="main-header__item-list">
            <% if(!loggedStatus) { %>
            <li class="main-header__item"><a href="/admin/login" class="<%= path === 'login' ? 'active' : '' %>">Login</a></li>
            <li class="main-header__item"><a href="/admin/signup" class="<%= path === 'signup' ? 'active' : '' %>">Signup</a></li>
            <% } else { %>
            <li class="main-header__item">
                <form action="/admin/logout" method="POST">
                    <button type="submit">Logout</button>           
                </form>
            </li>
            <% } %>
        </ul>
    </nav>